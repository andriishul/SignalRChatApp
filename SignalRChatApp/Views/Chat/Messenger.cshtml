@{
    ViewBag.Title = "Send Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <h2>@ViewBag.Title</h2>

    <div class="chat-container">
        <h3>Inbox</h3>
        <div id="messageBox" class="message-box"></div>
    </div>

    <hr />

    <div class="send-message-container">
        <h3>Send a Message</h3>
        <div class="input-group">
            <label for="email">User Email:</label>
            <input type="email" id="email" placeholder="Enter user email" required />
        </div>

        <div class="input-group">
            <label for="message">Message:</label>
            <textarea id="message" placeholder="Enter your message" rows="4"></textarea>
        </div>

        <div class="input-group">
            <label for="fileInput">Attach File:</label>
            <input type="file" id="fileInput" />
        </div>

        <div class="submit-button">
            <button id="sendMessage">Send Message</button>
        </div>
    </div>
</body>
</html>

@section scripts {
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/privateChat.js"></script>
}
